<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method = "post">
                <input class="block w-full rounded-md px-5 outline-none py-2 bg-zinc-800 " type="text" placeholder="Tiltle goes here" name="title">
                <textarea class="block w-full rounded-md mt-2 px-5 py-2 resize-none bg-zinc-800" placeholder="Write your project details here" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2" type="submit" value="Create Tasks"> 
            </form>
        </div> 
        <div class="tasks p-10 flex flex-wrap gap-3 p-10">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72  px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl"><%= val %>  </h1>
                        <div class="flew w-full justify-between items-center mt-3">
                            <a class="text-blue-800 inline-block " href="/file/<%= val%>">Read More..</a>
                            <a class="text-zinc-600 float-right" href="/edit/<%=val%>">edit</a>
                        </div>
                        
                    </div>
                <% }) %>

            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet.</h3>
                <% } %>
       
            
        </div>
    
    </div>
    <script src="/javascripts/script.js"></script>
    
</body>
</html>